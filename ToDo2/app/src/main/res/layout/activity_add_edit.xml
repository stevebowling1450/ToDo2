<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stveo.stevebowling.todo.addEdit">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_gravity="bottom|end"
        app:srcCompat="@android:drawable/ic_menu_revert"
        app:backgroundTint="@color/colorAccent"
        app:elevation="24dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        srcCompat="@android:drawable/ic_media_previous"
        android:onClick="onClickBack"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Task Name"
        android:ems="10"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:id="@+id/taskName"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_below="@+id/dueDate"
        android:layout_alignStart="@+id/dueDate"
        android:id="@+id/dueTime"
        android:layout_marginTop="10dp"
        android:hint="Enter Due Time"/>

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="onClickSubmit"
        android:layout_alignBottom="@+id/fab"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dueDate"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/taskName"
        android:layout_alignStart="@+id/taskName"
        android:hint="Enter Due Date"/>

    <TextView
        android:text="Please Choose  a Category :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/dueTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#000"/>

    <Spinner
        android:id="@+id/catDrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:soundEffectsEnabled="true"
        android:entries="@array/category_arrays"
        android:gravity="center"
        android:scrollbarSize="20dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
       />

    <Button
        android:text="Choose Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="59dp"
        android:id="@+id/picButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="loadImagefromGallery"/>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </ImageView>
</RelativeLayout>
